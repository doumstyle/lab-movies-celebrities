<h2 class="mt-5">Add a Movie</h2>
<hr>
<form action="/movies/create" method="post" class="d-flex flex-column">
    <div class="form-group">
        <label for="name">Name: </label>
        <input type="text" name="name" id="name" class="form-control" placeholder="Enter the name of a Movie">
    </div>
    
    <div class="form-group">
        <label for="genre">Genre: </label>
        <input type="text" name="genre" id="genre" class="form-control" placeholder="Add comma seperated genre(s)">
    </div>
    
    <div class="form-group">
        <label for="plot">Plot: </label>
        <input type="text" name="plot" id="plot" class="form-control" placeholder="Enter Movie plot">
    </div>

    <div class="form-group">
      <label for="cast">Cast: </label>
      <select name="cast" id="cast" class="form-control" multiple>
        {{#each cast}}
        <option value="{{_id}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    
    <button class="btn btn-primary d-flex align-self-center">Create a Movie</button>
</form>